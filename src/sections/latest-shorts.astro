---
import { Button } from "@/components/ui/button";
import type { CategorizedVideos } from "@/types";
import { Play } from "lucide-react";

const { shorts } = Astro.props as CategorizedVideos;
---

<section id="shorts" class="w-full py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6">
    <h2
      class="mb-8 font-bold text-3xl tracking-tighter sm:text-4xl md:text-5xl"
    >
      Shorts Destacados
    </h2>
    <div class="flex space-x-4 overflow-x-auto pb-4">
      {
        shorts?.map((short) => (
          <div class="group relative w-48 flex-none">
            <div class="overflow-hidden rounded-lg shadow-md">
              <img
                src={short.thumbnails.standard.url}
                alt={`Short thumbnail ${short.title}`}
                width={200}
                height={300}
                class="w-full object-cover"
              />
              <div class="p-2">
                <p class="font-semibold text-sm">{short.title}</p>
              </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center rounded-lg bg-black bg-opacity-50 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              <a href={short.url} target="_blank">
                <Button className="scale-0 transform bg-white text-purple-600 transition-transform duration-300 hover:bg-gray-100 group-hover:scale-100">
                  <Play className="mr-2 h-4 w-4" /> Ver
                </Button>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
