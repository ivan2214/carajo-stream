---
import Container from "@/components/container.astro";
import { Button } from "@/components/ui/button";
import GalleryPrograms from "@/components/gallery.astro";
import { BadgeDollarSign } from "lucide-react";
---

<section class="w-full container mx-auto bg-primary py-12 md:py-24">
  <Container className="flex flex-col gap-10 md:gap-0 md:flex-row items-center">
    <GalleryPrograms />
    <div class="flex flex-col items-center space-y-4 text-center">
      <div class="space-y-2">
        <h1
          class="font-bold text-3xl text-white tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
        >
          Bienvenidos a CarajoStream
        </h1>
        <p class="mx-auto max-w-[700px] text-gray-200 md:text-xl">
          Los primeros en verla.
        </p>
      </div>
      <div class="space-x-4">
        <Button size="lg" className="bg-white text-primary hover:bg-gray-100">
          <a
            href="https://carajostream.tv"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-2"
          >
            <BadgeDollarSign className="h-5 w-5" />
            Dona ya aqui tus dolares para mantener a chicho
          </a>
        </Button>
      </div>
    </div>
  </Container>
</section>
