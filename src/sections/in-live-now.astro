---
import Container from "@/components/container.astro";
import { Button } from "@/components/ui/button";
import type { CategorizedVideos } from "@/types";
import { Radio, Tv } from "lucide-react";

const { live } = Astro.props as CategorizedVideos;
---

<section id="live" class="w-full bg-gray-100 py-12 md:py-24 lg:py-32">
  <Container>
    <h2
      class="mb-8 font-bold flex items-center gap-x-5 text-3xl tracking-tighter sm:text-4xl md:text-5xl animate-pulse"
    >
      En Vivo Ahora <Radio className="h-8 w-8 text-red-600" />
    </h2>
    {
      live && (
        <article class="overflow-hidden max-w-screen-md ml-auto hover:shadow-2xl duration-300 transition rounded-lg shadow-xl">
          <img
            src={live.thumbnails.high.url}
            alt="Live stream thumbnail"
            class="w-full object-cover"
          />
          <div class="bg-white p-6">
            <h3 class="mb-2 font-bold text-2xl">{live.title}</h3>
            <p class="mb-4 text-gray-600">{live.publishedAt}</p>
            <a href={live.url} target="_blank">
              <Button className="bg-red-600 hover:bg-red-700">
                <Tv className="mr-2 h-4 w-4" /> Ver Ahora
              </Button>
            </a>
          </div>
        </article>
      )
    }
  </Container>
</section>
