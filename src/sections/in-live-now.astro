---
import { Button } from "@/components/ui/button";
import type { CategorizedVideos } from "@/types";
import { Tv } from "lucide-react";

const { live } = Astro.props as CategorizedVideos;
---

<section id="live" class="w-full bg-gray-100 py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6">
    <h2
      class="mb-8 font-bold text-3xl tracking-tighter sm:text-4xl md:text-5xl"
    >
      En Vivo Ahora
    </h2>
    {
      live && (
        <div class="overflow-hidden rounded-lg shadow-xl">
          <img
            src={live.thumbnails.standard.url}
            alt="Live stream thumbnail"
            width={800}
            height={400}
            class="w-full object-cover"
          />
          <div class="bg-white p-6">
            <h3 class="mb-2 font-bold text-2xl">{live.title}</h3>
            <p class="mb-4 text-gray-600">{live.publishedAt}</p>
            <Button className="bg-red-600 hover:bg-red-700">
              <Tv className="mr-2 h-4 w-4" /> Ver Ahora
            </Button>
          </div>
        </div>
      )
    }
  </div>
</section>
